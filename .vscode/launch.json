{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/my_program", // Path to your executable
            "args": [], // Add program arguments here if needed
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}", // Set the working directory
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build" // Ensures the build task runs before debugging
        }
    ]
}
